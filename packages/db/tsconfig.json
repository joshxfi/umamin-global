{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@umamin-global/db",
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
